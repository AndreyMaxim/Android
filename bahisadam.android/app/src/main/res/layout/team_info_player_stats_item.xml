<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:background="@android:color/background_light">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/image_view_stats_item"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/image_view_stats_item"
        android:layout_toEndOf="@id/image_view_stats_item"
        android:gravity="center_vertical"
        android:id="@+id/text_view_stats_item_player_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/text_view_stats_item_player_count"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d6db"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>