<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/view_bg_color</item>
    	<item name="android:colorBackground">@color/view_bg_color</item>
    	<item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_header</item>
    </style>
    
    
    <style name="ratingBarList" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>
    
    
    <style name="ratingBarUserRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/star_rating_bar_user_full</item>
        <item name="android:minHeight">72dip</item>
        <item name="android:maxHeight">72dip</item>
    </style>
    
    
    <!--  
    	Your custom Action Bar Background goes here.
    	@drawable/ - For Image
    	@color/ - For Color found in values/colors.xml
    -->
    <style name="CustomActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/nav_bar_pattern</item>
    </style>
    

</resources>
